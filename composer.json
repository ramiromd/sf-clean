{
    "name": "ramiromd/sfclean",
    "description": "Proyecto demostración con clean architecture en Symfony",
    "autoload": {
        "psr-4": {
            "Ramiromd\\Sfclean\\": "src/",
            "Ramiromd\\Sfclean\\Test\\": "test/",
            "Ramiromd\\Sfclean\\Rest\\": "api/src/"
        }
    },
    "authors": [
        {
            "name": "Ramiro Martínez D'Elía"
        }
    ],
    "scripts": {
        "test:unit" : "./vendor/bin/phpunit --configuration phpunit.xml  --testsuite Unit --testdox"
    },
    "require": {
        "php": "^8.4",
        "symfony/framework-bundle": "^8.0",
        "symfony/runtime": "^8.0",
        "symfony/console": "^8.0",
        "symfony/yaml": "^8.0",
        "ramsey/uuid": "4.9.2"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpunit/phpunit": "^12.5"
    }
}
